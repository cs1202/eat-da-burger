<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="/assets/images/burger1.jpg" alt="burger" />
			<h1> <b>Eat-Da-Burger!</b></h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
				{{#each burgers}}
				{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
					<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
						<button type="submit" class="button">Devour it!ğŸ”</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			{{#each burgers}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit ğŸ”</button>
			</form>
			<p><b>Enter a burger you want to eat Click the "Submit" button.</b></p>
		</div>
	</div>
</div>
